#!/usr/bin/env ruby

require 'hookers'

args = ARGV.dup
command = args.shift

options = Slop.parse(args, help: true) do
  on :from, "Generate changelog from this refence", argument: true
  on :to, "Generate changelog up to this reference", argument: true
  on :setup, false
end

Hookers.run!(command, options.to_hash)
